<% if reply.try(:id) %>
  <dl class="dl-horizontal">
    <dt>Titulo:</dt>
    <dd><%= reply.titulo %></dd>
    <dt>Texto:</dt>
    <dd><%= reply.texto %></dd>
    <dt>Autor:</dt>
    <dd><%= reply.usuario.try(:nome) %></dd>
    <% if reply.usuario == current_user || current_user.try(:admin) %>
      <dd>
        <%= link_to 'Reply', new_comentario_comentario_path(reply), id: "reply-#{reply.usuario.nome}-#{reply.titulo}" %>
        <%= link_to 'Edit', edit_comentario_comentario_path(reply.comentavel, reply), id: "edit-#{reply.usuario.nome}-#{reply.titulo}" %>
        <%= link_to 'Destroy', [reply.comentavel, reply], method: :delete, data: {confirm: 'Are you sure?'}, id: "destroy-#{reply.usuario.nome}-#{reply.titulo}" %>
      </dd>
    <% end %>
    <dd>
      <%= render partial: 'comentarios/reply', collection: reply.comentarios %>
    </dd>
  </dl>
<% end %>
