<% if reply.try(:id) %>
  <dl class="dl-horizontal">
    <dt>Titulo:</dt>
    <dd><%= reply.titulo %></dd>
    <dt>Texto:</dt>
    <dd><%= reply.texto %></dd>
    <dt>Autor:</dt>
    <dd><%= reply.usuario.try(:nome) %></dd>
    <% if reply.usuario == current_usuario || current_usuario.try(:admin) %>
      <dd>
        <%= link_to 'Reply', new_comentario_comentario_path(reply) %>
        <%= link_to 'Edit', edit_comentario_comentario_path(reply.comentavel, reply) %>
        <%= link_to 'Destroy', [reply.comentavel, reply], method: :delete, data: {confirm: 'Are you sure?'} %>
      </dd>
    <% end %>
    <dd>
      <%= render partial: 'comentarios/reply', collection: reply.comentarios %>
    </dd>
  </dl>
<% end %>
