<%= form_with(model: [@comentavel, @comentavel.comentarios.build], html: {class: "form-horizontal", role: "form"}) do |f| %>

  <div class="form-group">
    <%= f.label :titulo, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :titulo, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :texto, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :texto, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit id: 'comentar', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
