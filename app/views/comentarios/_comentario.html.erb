<% if comentario.try(:id) %>
  <dl class="dl-horizontal">
    <dt>Titulo:</dt>
    <dd><%= comentario.titulo %></dd>
    <dt>Texto:</dt>
    <dd><%= comentario.texto %></dd>
    <dt>Autor:</dt>
    <dd><%= comentario.usuario.try(:nome) %></dd>
    <% if comentario.usuario == current_usuario || current_usuario.try(:admin) %>
      <dd>
        <%= link_to 'Edit', edit_produto_comentario_path(@produto, comentario) %>
        <%= link_to 'Destroy', [@produto, comentario], method: :delete, data: {confirm: 'Are you sure?'} %>
        <%= render partial: 'comentarios/form', locals: {comentavel: comentario} %>
    <% end %>
    </dd>
    <dd>
      <%= render comentario.comentarios %>
    </dd>
  </dl>
<% end %>
