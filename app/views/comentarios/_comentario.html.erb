<% if comentario.try(:id) %>
  <dl class="dl-horizontal">
    <dt>Titulo:</dt>
    <dd><%= comentario.titulo %></dd>
    <dt>Texto:</dt>
    <dd><%= comentario.texto %></dd>
    <dt>Autor:</dt>
    <dd><%= comentario.usuario.try(:nome) %></dd>
    <% if current_usuario %>
      <td><%= link_to 'Edit', edit_produto_comentario_path(@produto, comentario) %></td>
      <td><%= link_to 'Destroy', [@produto, comentario], method: :delete, data: {confirm: 'Are you sure?'} %></td>
    <% end %>
  </dl>
<% end %>
