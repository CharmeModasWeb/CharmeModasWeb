<dl class="dl-horizontal">
  <dd>
    <dl class="dl-horizontal">
      <%= render item.produto %>
      <dt>Quantidade:</dt>
      <dd><%= item.quantidade %></dd>
      <dt>Pre√ßo</dt>
      <dd><%= item.preco_total %></dd>

      <% if can? :manage, Item %>
        <dd>
          <%= link_to 'Edit', edit_pedido_item_path(item.pedido, item), id: "edit-#{item.produto.codigo}" %>
