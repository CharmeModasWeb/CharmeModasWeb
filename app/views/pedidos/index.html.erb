<div class="page-header">
  <h1>Pedidos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Cliente</th>
      <th>Status</th>
      <th colspan="2"></th>
    </tr>
    </thead>

    <tbody>
    <%= content_tag_for(:tr, @pedidos) do |pedido| %>
      <td><%= pedido.usuario.nome %></td>
      <td><%= pedido.status %></td>
    <td><%= link_to 'Show', pedido, id: "ShowPedido-#{pedido.usuario.nome}" %></td>
    <td><%= link_to 'Destroy', pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
    </tbody>
  </table>
</div>
