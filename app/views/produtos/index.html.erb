<div class="page-header">
  <% if current_usuario.try(:admin?) %>
    <%= link_to new_produto_path, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Produto
    <% end %>
  <% end %>
  <h1>Listing produtos</h1>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Código</th>
      <th>Nome</th>
      <th>Marca</th>
      <th>Quantidade estoque</th>
      <th>Preço</th>
      <th></th>
      <% if can? :read && :destroy, Produto %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
    </thead>
    <tbody>
    <%= content_tag_for(:tr, @produtos) do |produto| %>
      <td><%= produto.codigo %></td>
      <td><%= produto.nome %></td>
      <td><%= produto.marca %></td>
      <td><%= produto.quantidade_estoque %></td>
      <td><%= produto.preco %></td>
      <td><%= link_to 'Show', produto, id: "s-#{produto.codigo}" %></td>
      <% if can? :read && :destroy, Produto %>
        <td><%= link_to 'Edit', edit_produto_path(produto), id: "e-#{produto.codigo}" %></td>
        <td><%= link_to 'Destroy', produto, method: :delete, data: {confirm: 'Are you sure?'}, id: "d-#{produto.codigo}" %></td>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>
