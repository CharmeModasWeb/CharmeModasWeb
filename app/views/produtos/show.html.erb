<div class="page-header">
  <%= link_to produtos_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_produto_path(@produto), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show produto</h1>
</div>

<dl class="dl-horizontal">

  <dt>Codigo:</dt>
  <dd><%= @produto.codigo %></dd>


  <dt>Nome:</dt>
  <dd><%= @produto.nome %></dd>


  <dt>Marca:</dt>
  <dd><%= @produto.marca %></dd>


  <dt>Quantidade estoque:</dt>
  <dd><%= @produto.quantidade_estoque %></dd>


  <dt>Preco:</dt>
  <dd><%= @produto.preco %></dd>


</dl>
